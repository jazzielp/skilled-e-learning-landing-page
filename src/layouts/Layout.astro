---
interface Props {
  title: string;
}

import "@fontsource-variable/plus-jakarta-sans";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="../../public/images/favicon-32x32.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="">
      <slot />
      <div class="overflow-x-auto">
        <img src="./images/image-hero-tablet.png" alt="" class="table:block mov:hidden absolute top-[-6rem] right-[-17rem] z-[-999]">
      </div>
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  body {
    width: 100%;
    position: relative;
  }

  .section-cards {
    background: linear-gradient(to bottom, #FFFFFF 50%, #F0F1FF 100%);
  }
</style>